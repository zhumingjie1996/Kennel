/* components/commitShowItem/commitShowItem.wxss */
.container{
  position: relative;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}

.container::after{
  position: absolute;
  content:'';
  width: 90%;
  left: 5%;
  bottom: 0;
  height: 1rpx;
  background: #f1f1f1;
}

.userInfo_text{
  width: 100%;
  display: flex;
  flex-direction: row;

}

.avatar{
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
  border-radius: 50%;
  border: 2rpx #000 solid;
}

.avatarImg{
  width: 60rpx;
  height: 60rpx;
}

.nickName_text{
  width: 85%;
}

.niceName{
  font-weight: bold;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.delete{
  display: inline-block;
  font-weight: normal;
  font-size: 20rpx;
  height: 20rpx;
  width: 20rpx;
  position: relative;
}

.delete::before{
  content: "";
  position:absolute;
  width: 1px;
  height: 100%;
  border-radius: 1px;
  background: rgb(199, 199, 199);
  transform: rotateZ(45deg);
}
.delete::after{
  content: "";
  position:absolute;
  width: 1px;
  height: 100%;
  border-radius: 1px;
  background: rgb(199, 199, 199);
  transform: rotateZ(-45deg);
}

.dateAndTime{
  font-size: 25rpx;
  font-weight: 400;
  color: rgb(161, 161, 161);
}

.text{
  margin-top: 10rpx;
  font-size: 28rpx;
  font-weight: 700;
}

.imgs{
  width: 80%;
  overflow: hidden;
  height: auto;
  margin-left: 96rpx;
  margin-top: 20rpx;
}

.commitImgs{
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;
}

.commitImgsInner{
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

/* 仅有一张图片的时候图片自适应大小 */
.imgsOnlyOne{
  width: 80%;
  overflow: hidden;
  margin-left: 96rpx;
  margin-top: 20rpx;
  /* display: flex; */
  /* flex-direction: row; */
  /* justify-content: start; */
}
.commitImgsInnerOnlyOne{
  width: 100%;
  /* height: auto; */
  max-height: 400rpx;
  border-radius: 5rpx;
}
.operate,
.time{
  width: 80%;
  margin-left: 13.5%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.operateBar{
  position: relative;
  width: 50rpx;
  height: 30rpx;
  background-color: #f1f1f1;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.operateBar::before{
  content: '';
  /* position: absolute; */
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background-color: #000;
}

.operateBar::after{
  content: '';
  /* position: absolute; */
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background-color: #000;
}

.locationText{
  font-size: 25rpx;
  margin-left: 5rpx;
}

.ken_tian{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.operateItem{
  margin-right: 16rpx;
}

.kenIcon{
  position: relative;
  top: 5rpx;
  transform: rotateZ(180deg);
  transform-origin: center;
  /* margin-top: 10rpx; */
}
.operateText{
  font-size: 25rpx;
  margin-left: 5rpx;
}

.comment{
  width: 75%;
  height: 50rpx;
  margin-left: 13.5%;
  font-size: 25rpx;
  background: rgb(247, 247, 247);
