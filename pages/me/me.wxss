/* pages/me/me.wxss */

.container{
  width: 100%;
  height: 100%;
}

.baseInfoContainer{
  opacity: 0;
  width: 100%;
  height: 400rpx;
  background-color: #F5F5F5;
  border-radius: 0 0 50rpx 50rpx;
  box-shadow: 5rpx 5rpx 10rpx rgb(224, 224, 224);
}

.openData{
  width:100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.nickname{
  font-size: 17pt !important;
  font-weight: 700;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.nicknameInner{
  display: flex;
  flex-direction: row;
  align-items: bottom;
  justify-content: space-between;
}

.loginBtn{
  font-size: 15pt !important;
  border-radius: 0px !important;
  border: none !important;
}

.signatureContainer{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.signature{
  font-size: small;
  font-weight: 400;
  color: #D5D5D5;
}

.pen{
  display: inline-block;
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

.avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 5rpx 5rpx 10rpx rgb(224, 224, 224);
}

.avatarImg{
  width: 100%;
  height: 100%;
}

.socialInfo{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.socialInfoItem{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.socialInfoItemTitle{
  font-size: small;
  margin-bottom: 15rpx;
}
.socialInfoItemNum{
  font-weight: 700;
}

.setting{
  margin-top: 20rpx;
}
